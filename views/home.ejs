<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>
        <%= title %> 
    </title>
    <link rel="stylesheet" href="/css/home.css">
    <script src="https://kit.fontawesome.com/e94e557057.js" crossorigin="anonymous"></script>
</head>
<body>
    <h1><i class="fa-solid fa-address-book"></i>  My Contact List</h1>
    <div id="contacts">
        <ul>
            <%for(let i of contact_list){%>
                <li>
                    <div class="contact-items">
                        <p><%= i.name %> </p>
                        <p><%= i.phone %> </p>
                    </div>
                    <div class="delete-button">
                        <a href="/delete-contact/?id=<%= i._id %> ">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </div>
                </li>
            <%} %> 
        </ul>
    </div>
    <form action="/create_contact" method="POST">
        <input type="text" name="name" id="" placeholder="Enter Name" required>
        <input type="text" name="phone" id="" placeholder="Enter Phone" required>
        <button type="submit">Add</button>
    </form>
    <script type="text/javascript" src="/js/home.js"></script>
</body>
</html>